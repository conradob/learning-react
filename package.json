{
  "name": "learning-react",
  "version": "0.9.0",
  "main": "lib/server.js",
  "author": "Conrado Fonseca",
  "license": "WTFPL",
  "scripts": {
    "dev": "NODE_PATH=./lib pm2 start lib/server.js --watch --interpreter babel-node --name appDev",
    "build-node": "babel lib -d build --copy-files",
    "webpack": "webpack -wd",
    "build-webpack": "webpack -p",
    "test": "jest --watch",
    "verify-tests": "jest --coverage",
    "format": "yarn prettier -- --config .prettierrc --write \"{lib,__{tests,mocks}__}/**/*.js\" \"{lib,__{tests,mocks}__}/**/**/*.js\"",
    "start-prod": "NODE_ENV=production NODE_PATH=./build pm2 start build/server.js -i max --name appProd"
  },
  "babel": {
    "presets": [
      "react",
      ["env", { "targets": { "node": "current" } }]
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "enzyme": "^2.9.1",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^7.3.0",
    "jest": "^20.0.4",
    "prettier": "^1.6.1",
    "react-addons-perf": "^15.4.2",
    "react-test-renderer": "^15.6.1"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "ejs": "^2.5.7",
    "express": "^4.15.4",
    "lodash.debounce": "^4.0.8",
    "lodash.pickby": "^4.6.0",
    "pm2": "^2.6.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "webpack": "^3.5.5"
  }
}
